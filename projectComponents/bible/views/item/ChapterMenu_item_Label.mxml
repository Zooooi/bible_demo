<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" xmlns:act="projectComponents.bible.act.*" xmlns:v="projectComponents.bible.v.*" xmlns:o="projectClass.vo.o.*"
		 height="30"
		 >
	<fx:Style source="projectSkin/css/bible.css"/>
	<fx:Declarations>
		<fx:uint id="nW"/>
		<s:DropShadowFilter id="shadow"  quality="2" alpha="0.5" distance="1" blurX="5" blurY="5"	inner="false"/>
		
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.events.ResizeEvent;
			
			import projectClass.vo.o.BibleOB;
			
			[Bindable]public var data:BibleOB
			
			protected function onResize(event:ResizeEvent):void
			{
				
			}
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="old_testament" />
		<s:State name="new_testament" />
		<s:State name="current_volume" />
	</s:states>
	
	
	<s:Group left="10" height="100%" filters="{shadow}">
		<s:Rect radiusX="15" height="100%" width="{nW+20}" includeIn="old_testament">
			<s:stroke>
				<s:SolidColorStroke color="0x68c8d9"/>
				<!--<s:LinearGradientStroke rotation="90" weight="1">
				<s:GradientEntry color="0x000000" alpha="0.25" ratio="0.0" />
				<s:GradientEntry color="0x000000" alpha="0.07" ratio="0.001" />
				<s:GradientEntry color="0x000000" alpha="0.07" ratio="0.0011" />
				<s:GradientEntry color="0x000000" alpha="0.07" ratio="0.965" />
				<s:GradientEntry color="0x000000" alpha="0.00" ratio="0.9651" />
				</s:LinearGradientStroke>-->
			</s:stroke>
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry color="0x89e9fa" alpha="1" ratio="0.1"/>
					<s:GradientEntry color="0x68c8d9" alpha="1" ratio="0.5"/>
					<s:GradientEntry color="0x42a2b3" alpha="1" ratio="0.9"/>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		
		
		<s:Rect radiusX="15" height="100%" width="{nW+20}" includeIn="new_testament" >
			<s:stroke>
				<s:SolidColorStroke color="0xa7cc36"/>
			</s:stroke>
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry color="0xccf15b" alpha="1" ratio="0.1"/>
					<s:GradientEntry color="0xa7cc36" alpha="1" ratio="0.5"/>
					<s:GradientEntry color="0xa2d602" alpha="1" ratio="0.9"/>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		
		
		<s:HGroup gap="3" id="myText" horizontalCenter="0" verticalCenter="0" >
			<s:Label styleName="volumeLabel" top="0" bottom="0" textAlign="right" horizontalCenter="0" verticalCenter="0" verticalAlign="middle" text="{data.sTitle}" resize="onResize(event)" />
			<s:Label styleName="volumeLabelNum" top="0" bottom="0" textAlign="left" horizontalCenter="0" verticalCenter="0" verticalAlign="middle" text="{String(data.nChapterLength)}" resize="onResize(event)" />
		</s:HGroup>
	</s:Group>
	
</s:Group>
